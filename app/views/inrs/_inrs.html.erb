<% if edit
  tableType = '_editable'
else
  tableType = ''
end %>

<table id="inrs<%=tableType%>" class="table table-striped table-bordered">
  <thead>
    <tr>
      <% if edit %>
        <th></th>
      <% end %>
      <th>Date of INR</th>
      <th>INR</th>
      <th>Note</th>
    </tr>
  </thead>

  <tbody>
    <% inrs.each do |inr| %>
      <tr>
        <% if edit %>
          <td>
            <%= link_to edit_inr_path(inr) do %>
              <span class="glyphicon glyphicon glyphicon-pencil" aria-hidden="true"></span>
            <% end %>
          </td>
        <% end %>
        <td><%= inr.wdate %></td>
        <td>
          <%#= link_to inr.value, inr %> 
          <%= inr.value %> 
        </td>
        <td><%= inr.note %></td>
      </tr>
    <% end %>
  </tbody>
</table>