<div class="container">
  <p id="notice"><%= notice %></p>

  <%= link_to 'Edit this Note', edit_note_path(@note) %> |
  <%= link_to 'Back to Patient Notes', notes_path %>

  <br><br>

  <!-- duplicate code from /notes/_notes.html.erb -->

  <p>
    <strong>Author of Note:</strong>
    <% if ["Rep", "Staff"].include? @note.noteable.class.name %>
      <td><%= link_to @note.noteable.full_name, @note.noteable %> (<%= @note.noteable.class.name %>)</td>
    <% else # assume it's a user (admin) %> 
      <td><%= @note.noteable.email %></td>
    <% end %>
  </p>
  
  <p>
    <strong>Patient ID:</strong>

    <%= link_to @note.patient.id, @note.patient %>
  </p>

  <p>
    <strong>Patient:</strong>
    <%= link_to "#{@note.patient.first_name} #{@note.patient.middle_initial} #{@note.patient.last_name}", @note.patient %>
  </p>

  <p>
    <strong>Interaction type:</strong>
    <%= @note.interaction_type %>
  </p>

  <p>
    <strong>Is this note in regards to patient training?</strong>
    <%= @note.training_meeting ? "Yes" : "No" %>
  </p>

  <p>
    <strong>Note:</strong>
    <%= @note.note %>
  </p>

  <p>
    <strong>Date in regards to the note:</strong>
    <%= @note.wdate %>
  </p>
</div>