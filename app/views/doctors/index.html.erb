<h1>Listing doctors</h1>

<%= render 'layouts/pass' %>

<table class="table">
  <thead>
    <tr>
      <th>ID</th>
      <th>Full name</th>
      <th>Email</th>
      <th>Phone number</th>
      <th>Fax number</th>
      <th>Address</th>
      <th>State</th>
      <th>Zipcode</th>
      <th>Hours</th>
      <th>Patients</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @doctors.each do |doctor| %>
      <tr>
        <td><%= link_to doctor.id, doctor %></td>
        <td><%= link_to doctor.full_name, doctor %></td>
        <td><%= doctor.email %></td>
        <td><%= doctor.phone_number %></td>
        <td><%= doctor.fax_number %></td>
        <td><%= doctor.address %></td>
        <td><%= doctor.state %></td>
        <td><%= doctor.zipcode %></td>
        <td><%= doctor.hours %></td>
        <td>
          <% if doctor.manegizations.empty? %>
            No patients assigned to this doctor
          <% else %>
            <ul>
              <% doctor.manegizations.map do |maneg| %>
                <li><%= link_to "(#{maneg.patient.id}) #{maneg.patient.first_name} #{maneg.patient.last_name}", maneg.patient %></li>
              <% end %>
            </ul>
          <% end %>
        </td>
        <td>
          <%= link_to 'Edit', edit_doctor_path(doctor) %>
          <%= link_to 'Destroy', doctor, method: :delete, data: { confirm: 'Are you sure?' } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Doctor', new_doctor_path %>
