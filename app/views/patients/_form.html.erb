<%= form_for(@patient, :html => {:class => "time_zone_used"}) do |f| %>
  <% if @patient.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@patient.errors.count, "error") %> prohibited this patient from being saved:</h2>

      <ul>
      <% @patient.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <strong><%= f.label :patient_ids, "Assign Doctor to this Patient:", class: 'control-label' %></strong>

    <br><br>

    <!-- removed this from :selected => @doctor.patients.pluck(:id) -->
    <%= f.select :doctor_ids, @doctors.collect{|t| [ "#{t.id}: #{t.full_name} - #{t.email}", t.id ]}, { :selected => @patient.manegizations.pluck(:doctor_id) }, { :multiple => true, :class => 'select2' } %>
  </div>

  <div class="field">
    <%= f.label :first_name %><br>
    <%= f.text_field :first_name %>
  </div>
  <div class="field">
    <%= f.label :middle_initial %><br>
    <%= f.text_field :middle_initial %>
  </div>
  <div class="field">
    <%= f.label :last_name %><br>
    <%= f.text_field :last_name %>
  </div>

  <div class="field">
    <%= f.label :email %><br>
    <%= f.text_field :email %>
  </div>

  <div class="field">
    <%= f.label :time_zone %></span><br>
    <%= time_zone_select("user", "time_zone", ActiveSupport::TimeZone.us_zones, { include_blank: true, default: @timezone}, {:class => 'select2 time_zone_select'}) %>
  </div>
  
  <div class="field">
    <%= f.label :communication_preferred %><br>
    <%= f.select :communication_preferred, options_for_select(contact_options, @patient.communication_preferred), {:include_blank => 'choose an option'}, {:class => "select2"} %>
  </div>

  <div class="field">
    <%= f.label :qualified %><br>
    <%= f.check_box :qualified %>
  </div>

  <div class="field">
    <%= f.label :insurance_verification %><br>
    <%= f.check_box :insurance_verification %>
  </div>
  <div class="field">
    <%= f.label :prescription_acquired %><br>
    <%= f.check_box :prescription_acquired %>
  </div>
  <div class="field">
    <%= f.label :phone_number %><br>
    <%= f.text_field :phone_number %>
  </div>
  <div class="field">
    <%= f.label :address %><br>
    <%= f.text_area :address %>
  </div>
  <div class="field">
    <%= f.label :state %><br>
    <%= f.select :state, options_for_select(us_states.map{|k,v| ["#{v} (#{k})", k]}, @patient.state), {:include_blank => 'choose a state'}, {:class => "select2"} %>
  </div>
  <div class="field">
    <%= f.label :zipcode %><br>
    <%= f.text_field :zipcode %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
