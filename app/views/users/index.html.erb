<div class="container">
  <div class="row">
    <div class="col-md-12">
      <div class="page-header">
        <h1><i class="fa fa-address-card"></i> Users Dashboard</h1>
      </div>

      <div class="" style="margin-bottom: 30px;">
        <table id="users-table" class="table table-striped table-bordered">
          <thead>
            <tr>
              <th>ID</th>
              <th></th>
              <th></th>
              <th>Email</th>
              <th>Role</th>
              <th>Sign In Count</th>
              <th>Time Zone</th>
            </tr>
          </thead>

          <tbody>
            <% @users.each do |user| %>
              <tr>
                <td><%= user.id %></td>
                <td>
                  <%= link_to edit_user_path(user) do %>
                    <span class="glyphicon glyphicon glyphicon-pencil" aria-hidden="true"></span>
                  <% end %>
                </td>
                <td>
                  <%= link_to user, method: :delete, data: { confirm: 'Are you sure?' } do %>
                    <span class="glyphicon glyphicon-remove delete-btn" aria-hidden="true"></span>
                  <% end %>
                </td>
                <td><%= user.email %></td>
                <td><%= user.role %></td>
                <td><%= user.sign_in_count %></td>
                <td><%= user.time_zone %></td>
               <!--  <td><%#= link_to 'Show', user %></td> -->
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
