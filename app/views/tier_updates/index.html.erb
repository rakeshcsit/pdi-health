<h1>Listing tier_updates</h1>

<table>
  <thead>
    <tr>
      <th>Instructor</th>
      <th>Old tier</th>
      <th>New tier</th>
      <th>Notes</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tier_updates.each do |tier_update| %>
      <tr>
        <td><%= tier_update.instructor %></td>
        <td><%= tier_update.old_tier %></td>
        <td><%= tier_update.new_tier %></td>
        <td><%= tier_update.notes %></td>
        <td><%= link_to 'Show', tier_update %></td>
        <td><%= link_to 'Edit', edit_tier_update_path(tier_update) %></td>
        <td><%= link_to 'Destroy', tier_update, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Tier update', new_tier_update_path %>
