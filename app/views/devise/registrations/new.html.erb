<div class="container">
  <div class="row">
    <div class="outside-form">
      <div class="form-container well">
        <h1 class="text-center">Sign Up</h1>
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= devise_error_messages! %>

          <div class="form-group">
            <label for="user_code" class="control-label">Please enter the code required to sign up</label><br>
            <input id="user_code" name="user[code]" value="" class="form-control">
          </div>

          <div class="form-group">
            <%= f.label :email, class: 'control-label' %><br />
            <%= f.email_field :email, class: 'form-control' %>
          </div>

          <div class="form-group">
            <%= f.label :password, class: 'control-label' %>
            <% if @minimum_password_length %>
            <em>(<%= @minimum_password_length %> characters minimum)</em>
            <% end %><br />
            <%= f.password_field :password, autocomplete: "off", class: 'form-control' %>
          </div>

          <div class="form-group">
            <%= f.label :password_confirmation, class: 'control-label' %><br />
            <%= f.password_field :password_confirmation, autocomplete: "off", class: 'form-control' %>
          </div>

          <div class="actions">
            <%= f.submit "Sign up", :class => 'btn btn-primary btn-block' %>
          </div>
        <% end %>

      </div>

      <div class="text-center">
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>

