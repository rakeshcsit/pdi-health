<div class="container">
  <div class="row">
    <div class="col-md-12">
      <div class="page-header">
        <h1><i class="fa fa-user-md"></i> Dashboard</h1>
      </div>

      <div class="" style="margin-bottom: 30px;">
        <table id="doctors-dashboard-table" class="table table-striped table-bordered">
      		<thead>
      			<tr>
      				<th>Patient</th>
      				<th>INR Reported</th>
      				<th>Date</th>
      				<th>Note</th>
      				<th>Full Report</th>
      			</tr>
      		</thead>
      		<tbody>
      			<% @patients.each do |patient| %>
      				<% last_inr = patient.user.inrs.last %>
      				
      				<tr>

      					<td><%= link_to "#{patient.first_name} #{patient.middle_initial} #{patient.last_name}", patient %></td>
      					<% if last_inr %>
      						<td><%= last_inr.value %></td>
      						<td><%= last_inr.wdate %></td>
      						<td><%= last_inr.note %></td>
      					<% else %>
      						<td></td>
      						<td></td>
      						<td></td>
      					<% end %>

      					<td><%= link_to "Full Report", patient %></td>
      				</tr>	
      			<% end %>
      		</tbody>

      	</table>
      </div>
    </div>
  </div>
</div>